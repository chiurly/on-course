<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oncourse.oncourse.fxcontroller.SignInController">
   <children>
      <VBox>
         <children>
            <Label text="Username" />
            <TextField fx:id="usernameField" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Label text="Password" />
            <PasswordField fx:id="passwordField" />
         </children>
      </VBox>
      <HBox>
         <children>
            <Pane HBox.hgrow="ALWAYS" />
            <Button defaultButton="true" mnemonicParsing="false" onAction="#onSignInButtonClick" text="Sign In" />
            <Pane HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <VBox spacing="10.0">
         <children>
            <HBox>
               <children>
                  <Pane HBox.hgrow="ALWAYS" />
                  <Label text="Don't have an accout?" />
                  <Pane HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Pane HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#onSignUpButtonClick" text="Sign Up" />
                  <Pane HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
